<% address_id = address_type.chars.first %>
<div class="inner" data-hook=<%="#{address_type}_inner" %>>
  <p class="field" id=<%="#{address_id}lastname" %> style=" display: none; width: 0; height: 0; ">
    <span class="required">*</span><%= form.label :lastname, t(:lastname) %>
    <%= form.text_field :lastname, :class => 'required' , :value => '( )'%>
  </p> 
  
  <div class="list" id=<%="#{address_id}firstname" %>>
    <span class="label">
		<span class="required">*</span>
		<%= form.label :firstname, t(:firstname) %>
	</span>
	<div class="field">
	  <%= form.text_field :firstname, :class => 'required' %>
	</div>
  </div>

  <% if Spree::Config[:company] %>
    <div class="list" id=<%="#{address_id}company" %>>
	<span class="label">
      <%= form.label :company, t(:company) %>
	</span> 
	<div class="field">
	  <%= form.text_field :company %>
	</div>
    </div>
  <% end %>
    <div class="list" id=<%="#{address_id}country" %>>
    <span class="label">
	  <span class="required">*</span>
	  <%= form.label :country_id, t(:country) %>
    </span>
	
	<div class="field" id=<%="#{address_id}country-selection" %>>
      <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'required'} %>
    </div>
  </div>

  <% if Spree::Config[:address_requires_state] %>
    <div class="list"  id=<%="#{address_id}state" %>>
      <% have_states = !address.country.states.empty? %>
	    <span class="label">
          <span class='required' id=<%="#{address_id}state-required"%>>*</span> 
	      <%= form.label :state, t(:state) %>
		</span>
		<div class="field">

      <% state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {:include_blank => true},
                            {:class => have_states ? 'required' : 'hidden',
                            :disabled => !have_states}) +
         form.text_field(:state_name,
                            :class => !have_states ? 'required' : 'hidden',
                            :disabled => have_states)
         ].join.gsub('"', "'").gsub("\n", "")
      %>
      <%= javascript_tag do -%>
        $('#<%="#{address_id}state" %>').append("<%== state_elements %>");
      <% end %>

      <noscript>
        <%= form.text_field :state_name, :class => 'required' %>
      </noscript>
	  </div>
    </div>
  <% end %>
  
  <div class="list"  id=<%="#{address_id}city" %>>
    <span class="label">
      <span class="required">*</span><%= form.label :city, t(:city) %>
	</span>
	<div class="field">
      <%= form.text_field :city, :class => 'required' %>
	</div>
  </div>
  
  <div class="list"  id=<%="#{address_id}address1" %>>
    <span class="label">
      <span class="required">*</span><%= form.label :address1, t(:street_address) %>
	</span>
	<div class="field">
      <%= form.text_field :address1, :class => 'required' %>
	</div>
  </div>
  
  <div class="list"  id=<%="#{address_id}address2" %>>
    <span class="label">
      <%= form.label :address2, t(:street_address_2) %>
	</span>
	<div class="field">
      <%= form.text_field :address2 %>
	</div>
  </div>

  <div class="list"   id=<%="#{address_id}zipcode" %>>
    <span class="label">
      <span class="required">*</span><%= form.label :zipcode, t(:zipcode) %>
	</span>
	<div class="field">  
      <%= form.text_field :zipcode, :class => 'required' %>
	</div>
  </div>
  <div class="list" id=<%="#{address_id}phone" %>>
    <span class="label">
      <span class="required">*</span><%= form.label :phone, t(:phone) %>
	</span>
	<div class="field">
      <%= form.phone_field :phone, :class => 'required' %>
  </div>
  <% if Spree::Config[:alternative_shipping_phone] %>
    <div class="list"  id=<%="#{address_id}altphone" %>>
	  <span class="label">
        <%= form.label :alternative_phone, t(:alternative_phone) %>
	  </span>
	  <div class="field">  
        <%= form.phone_field :alternative_phone %>
      </div>
    </div>
  <% end %>
</div>